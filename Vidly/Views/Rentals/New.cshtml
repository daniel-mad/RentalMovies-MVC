
@{
    ViewBag.Title = "New Rental Form";
}

<h2>New Rental Form</h2>
<form id="newRental">
    <div class="form-group">
        <label>Customer</label>
        <div class="tt-container">
            <input data-rule-validateCustomer="true" id="customer" name="customer" required type="text" class="form-control" value="" />
        </div>
    </div>
    <div class="form-group">
        <label>Movie</label>
        <div class="tt-container">
            <input data-rule-validateMovie="true"  id="movie" name="movie" type="text" class="form-control" value="" />
        </div>
    </div>
    <div class="row">
        <div class="col-md-4">
            <ul id="movies" class="list-group"></ul>
        </div>
    </div>
    <button type="submit" class="btn btn-primary">SUBMIT</button>

</form>

@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")
    <script>

        $(document).ready(function () {
            var vm = {
                movieIds: []
            }
            var customers = new Bloodhound({
                datumTokenizer: Bloodhound.tokenizers.obj.whitespace('name'),
                queryTokenizer: Bloodhound.tokenizers.whitespace,
             
                remote: {
                    url: '/api/customers?query=%QUERY',
                    wildcard: '%QUERY'
                }
            });

           

            $('#customer').typeahead({

                highlight: true,
                minLength: 3
            },
                {
                    name: 'customers',
                    display:'name',
                    source: customers
                }).on("typeahead:select", function (e, customer) {
                    vm.customerId = customer.id;
                });


            var movies = new Bloodhound({
                datumTokenizer: Bloodhound.tokenizers.obj.whitespace('name'),
                queryTokenizer: Bloodhound.tokenizers.whitespace,

                remote: {
                    url: '/api/movies?query=%QUERY',
                    wildcard: '%QUERY'
                }
            });



            $('#movie').typeahead({

                highlight: true,
                minLength: 3
            },
                {
                    name: 'movies',
                    display: 'name',
                    source: movies
                }).on("typeahead:select", function (e, movie) {
                    $("#movies").append(`<li class="list-group-item">${movie.name}</li>`);
                    $("#movie").typeahead("val", "");

                    vm.movieIds.push(movie.id)
                   
                });

            $.validator.addMethod("validateCustomer", function () {
                return vm.customerId && vm.customerId !== 0;
            }, "Please select a valid customer.")

            $.validator.addMethod("validateMovie", function () {
                return vm.movieIds.length > 0;
            }, "Please select a movie.")

            var validator = $("#newRental").validate({
                submitHandler: function () {
                   
                    $.ajax({
                        url: '/api/newRentals',
                        method: 'POST',
                        data: vm
                    })
                        .done(function () {
                            toastr.success('Rentals successfully recorded.')
                            $("#customer").typeahead("val", "");
                            $("#movie").typeahead("val", "");
                            $("#movies").empty()

                            vm = { movieIds: [] }

                            validator.resetForm()
                        })
                        .fail(function () {
                            toastr.error("Something unexpected happened.")
                        })
                    return false;
                }
            })

            

        })
    </script>
}